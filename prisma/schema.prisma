generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Lead {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  eventType     String
  city          String
  guestsBucket  String
  contactKind   String
  contactValue  String
  callbackType  String
  callbackAtUtc DateTime?
  utm           String?
  userAgent     String?
  ipHash        String?
}
